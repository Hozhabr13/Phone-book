{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        // Required for certain syntax usages
        "ecmaVersion": 2017,
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": { 
        "no-console": 0,
        "@typescript-eslint/no-explicit-any": 0 
    }
  }